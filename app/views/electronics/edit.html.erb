<h3> You are editing a new item </h3>

<%= form_tag "/electronics/#{@etl_item.id}", method: :patch do -%>

  <div class="form-group">
    Name: <input type="text" name="name" class="form-group" value=<%= @etl_item.name %>>
  </div>
  <div class="form-group">
    Type: <input type="text" name="item_type" class="form-group" value=<%= @etl_item.item_type %>>
  </div>
  <div class="form-group">
    Make: <input type="text" name="make" class="form-group" value=<%= @etl_item.make %>>
  </div>
  <div>
  Description: <input type="text" name="description" class="form-group" value=<%= @etl_item.description %>>
  </div>
  <div class="form-group">
    Image: <input type="text" name="image" class="form-group" value=<%= @etl_item.image %>>
  </div>
  <div class="form-group">
    Price: <input type="text" name="price" class="form-group" value=<%= @etl_item.price %>>
  </div>
   <div class="form-group">
    Shipping Period: <input type="text" name="shipping_period" class="form-group" value=<%= @etl_item.shipping_period %>>
  </div>
  <div>
    Submit: <input type="submit" value="Update item">
  </div>
<% end %>