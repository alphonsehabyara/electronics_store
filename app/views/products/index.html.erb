<h1> Available electronics items </h1>

<div class="row">
  <% @products.each_slice(3) do |three_products| %>
    <div class="row">
        <% three_products.each do |product| %>
          <div class="col-md-4">
            <h3> <b>Name:</b> <a href="/products/<%= product.id %>"><%= product.name %></a></h3>
            <h3> <b>Type:</b> <%= product.item_type %></h3>
            <h3> <b>Make:</b> <%= product.make %></h3>
            <h3> <b>Description:</b> <%= product.description %></h3>
            <img src="<%= product.image %>" class="img-responsive">
            <h3> <b>Price:</b> $<%= product.price %></h3>
            <h3> <b>Tax:</b> $<%= product.tax %></h3>
            <h3> <b>Shipping Period:</b> <%= product.shipping_period %> days</h3>
          </div>
        <% end %>
    </div>
  <% end %>
</div>

<%= button_to "Add a New Item", "/products/new", class: "btn btn-primary", method: :get %>
