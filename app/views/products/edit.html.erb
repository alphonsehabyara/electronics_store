<h3> You are editing <%= @product.name %></h3>

<ul>
  <% if @product.errors.any? %>
    <% @product.errors.full_messages.each do |message| %>
      <li class="model-errors"><%= message %></li> 
    <% end %>
  <% end %>
</ul>

<%= form_tag "/products/#{@product.id}", method: :patch do -%>

  <div class="form-group">
    <label for="Text">Name</label>
    <input type="text" class="form-control" name="name" placeholder="Name" value=<%= @product.name %>>
  </div>
  <div class="form-group">
    <label for="inputText">Type</label>
    <input type="text" class="form-control" name="item_type" placeholder="Type" value=<%= @product.item_type %>>
  </div>
  <div class="form-group">
    <label for="inputText">Make</label>
    <input type="text" class="form-control" name="make" placeholder="Make" value=<%= @product.make %>>
  </div>
  <div class="form-group">
    <label for="inputText">Description</label>
    <input type="text" class="form-control" name="description" placeholder="Description" value=<%= @product.description %>>
  </div>
  <div class="form-group">
    <label for="inputText">Image</label>
    <input type="text" class="form-control" name="image" placeholder="Image" value=<%= @product.image %>>
  </div>
  <div class="form-group">
    <label for="inputText">Price</label>
    <input type="text" class="form-control" name="price" placeholder="Price" value=<%= @product.price %>>
  </div>
  <div>
    Supplier:
    <select name="supplier_id">
      <option value="" disabled selected>Select your option</option>
      <% @suppliers.each do |supplier| %>
        <option value="<%= supplier.id %>"><%= supplier.name %></option>
      <% end %>
    </select>
  </div> <br>
  <div class="form-group">
    <label for="inputText">Shipping Period</label>
    <input type="text" class="form-control" name="shipping_period" placeholder="Shipping Period" value=<%= @product.shipping_period %>>
  </div>
  <div>
  <button type="submit" class="btn btn-primary">Submit</button>
  </div>
  
<% end %>
